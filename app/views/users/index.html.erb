<div class="container">
  <div class="well">

    <h1>Listado de usuarios</h1>

    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav">
          <li> <%= link_to 'Nuevo usuario', new_user_path %> </li>
          <li> <%= link_to 'Gestionar obras', posts_path %> </li>
          <li> <%= link_to "Gestionar provincias", provis_path %> </li>
          <li> <%= link_to "Gestionar escuelas", escuelas_path %> </li>
        </ul>
      </div>
    </div>

    <table class="table">
      <tr>
        <th>Nombre</th>
        <th>email</th>
        <th>Rol</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
    </table>

  </div>
</div>
