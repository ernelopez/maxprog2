<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table class="table">

  <tr class="field">
    <td><%= f.label :nombre %></td>
    <td><%= f.text_field :nombre %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :role %></td>
    <td><%= f.select( :role, options_for_select(["Admin","Profe"]) ) %></td>
  </tr>
  
  <tr class="actions">
    <td><%= f.submit %></td>
    <td></td>
  </tr>
</table>

<% end %>
