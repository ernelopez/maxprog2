              <p>Provincia: <%= @post.escuela.provi.prov %> </p>
              <p>Fecha de creación: <%= @post.fecha %></p>
              <p>Inventario: <%= @post.id %></p>
            </div>
            <div class="span8">
              <!-- ACA EL CODIGO -->
              <pre class="prettyprint lang-java"><%= @post.codigo %></pre>
            </div>
          </div>
        </div>
      </p>
    </div>
  </div>
</div>
