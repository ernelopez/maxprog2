<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">La Obra</a></li>
    <li><a href="#tab2" data-toggle="tab">El Código</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <p>
        <div class="container-fluid">
          <div class="row-fluid">
            <div class="span4">
              <h3> <%= @post.obra %> </h3>
              <p>Autores: <%= @post.autor1 %> <%= @post.autor2 %> <%= @post.autor3 %> <%= @post.autor4 %></p>
