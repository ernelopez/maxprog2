              <p>Curso: <%= @post.curso %> </p>
              <p>Año: <%= @post.fecha.year %></p>
              <p>Docente: <%= @post.docente.name %></p>
              <p>Provincia: <%= @post.escuela.provi.prov %> </p>
              <p>Fecha de creación: <%= @post.fecha %></p>
              <p>Inventario: <%= @post.id %></p>
              <p>Comentario: <%= @post.comentario %></p>
            </div>
            <div class="span8">
               <canvas data-processing-sources="<%= show_code_path(@post.id) %>"></canvas>
            </div>
          </div>
        </div>
      </p>
    </div>
    <div class="tab-pane" id="tab2">
      <p>
        <div class="container-fluid">
          <div class="row-fluid">
            <div class="span4">
