<div class="container">
  <div class="well">

    <h1>Listado de provincias</h1>

    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav">
          <li> <%= link_to 'Agregar provincia', new_provi_path %> </li>
          <li> <%= link_to "Gestionar escuelas", escuelas_path %> </li>
          <li> <%= link_to "Gestionar obras", posts_path %></li>
          <li> <%= link_to "Gestionar usuarios", users_path %></li>
        </ul>
      </div>
    </div>

    <table class="table">
      <tr>
        <th>Id</th>
        <th>Prov</th>
        <% if user_signed_in? && current_user.role == 'Admin'%>
        <th></th>
        <th></th>
        <% end %>
      </tr>

    <% @provis.each do |provi| %>
      <tr>
        <td><%= provi.id %></td>
        <td><%= provi.prov %></td>
        <% if user_signed_in? && current_user.role == 'Admin'%>
        <td><%= link_to 'Editar', edit_provi_path(provi) %></td>
        <td><%= link_to 'Eliminar', provi, method: :delete, data: { confirm: '¿Está seguro' } %></td>
        <% end %>
      </tr>
    <% end %>
    </table>

  </div>
</div>
